generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produk {
  id        Int         @id @default(autoincrement())
  nama      String
  harga     Int
  stok      Int
  warna     String
  foto      String
  transaksi Transaksi[]
}

model Transaksi {
  id              Int      @id @default(autoincrement())
  produkId        Int
  produk          Produk   @relation(fields: [produkId], references: [id])
  customer        String
  tanggal         DateTime @default(now())
  jumlah_beli     Int
  warna           String
  total_harga     Int
  metode_bayar    String
  total_bayar     Int
  total_kembalian Int
  status          String
}