generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Produk {
  id        Int         @id @default(autoincrement())
  nama      String
  harga     Int
  stok      Int
  warna     String?
  foto      String?
  deletedAt DateTime?
  isDeleted Boolean?
  transaksi Transaksi[]
}

model Transaksi {
  id              Int      @id @default(autoincrement())
  produkId        Int
  customer        String
  tanggal         DateTime @default(now())
  jumlah_beli     Int
  warna           String
  total_harga     Int
  metode_bayar    String
  total_bayar     Int
  total_kembalian Int
  status          String
  orderId         String?  // Diubah dari Int? menjadi String?
  produk          Produk   @relation(fields: [produkId], references: [id])
}

model OrderSequence {
  id        Int @id @default(autoincrement())
  lastOrder Int @default(0)
}